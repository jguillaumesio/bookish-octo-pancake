{
  "name": "Station",
  "version": "0.1.0",
  "description": "Interactive software to play games, listen to music, or even watch tv !",
  "author": "Jacopin Guillaume",
  "license": "MIT",
  "scripts": {
    "start": "concurrently -k \"npm run server\" \"npm run electron\"",
    "server": "node ./server/server",
    "electron": "npm --prefix ./client run electron-start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "concurrently": "^7.2.2",
    "wait-on": "^6.0.1"
  }
}
